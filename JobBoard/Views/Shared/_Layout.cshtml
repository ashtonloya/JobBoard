<!doctype html>
<html lang="en">
<head>
    <title>@ViewBag.Title | Jobazoid </title>
    <meta charset="utf-8">

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="~/Content/images/favicon.ico" rel="icon">
    <link rel="stylesheet" href="~/Content/css/custom-bs.css">
    <link rel="stylesheet" href="~/Content/css/jquery.fancybox.min.css">
    <link rel="stylesheet" href="~/Content/css/bootstrap-select.min.css">
    <link rel="stylesheet" href="~/Content/fonts/icomoon/style.css">
    <link rel="stylesheet" href="~/Content/fonts/line-icons/style.css">
    <link rel="stylesheet" href="~/Content/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Content/css/animate.min.css">
    <link rel="stylesheet" href="~/Content/css/style.css">

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.css">

    <link rel="stylesheet" href="~/Content/css/Styles.css" />

    @RenderSection("styles", required: false)
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/css")


</head>
<body id="top">

    <div class="site-wrap">
        <div class="site-mobile-menu site-navbar-target">
            <div class="site-mobile-menu-header">
                <div class="site-mobile-menu-close mt-3">
                    <span class="icon-close2 js-menu-toggle"></span>
                </div>
            </div>
            <div class="site-mobile-menu-body"></div>
        </div> <!-- .site-mobile-menu -->
        <!-- NAVBAR -->
        <header class="site-navbar mt-3">
            <div class="container-fluid">
                <div class="row align-items-center">
                    <div class="site-logo col-6"><a href="index.html">Jobazoid</a></div>
                    <nav class="mx-auto site-navigation">

                        <ul class="site-menu js-clone-nav d-none d-xl-block ml-0 pl-0">

                            <li><a href="@Url.Action("Index","Home")">Home</a></li>
                            <li><a href="@Url.Action("About","Home")">About</a></li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">JobBoard</a>
                                <div class="dropdown-menu">
                                    @Html.ActionLink("Application", "Index", "Application", null, new { @class = "dropdown-item" })
                                    @Html.ActionLink("Status", "Index", "ApplicationsStatus", null, new { @class = "dropdown-item" })
                                    @Html.ActionLink("Locations", "Index", "Location", null, new { @class = "dropdown-item" })
                                    @Html.ActionLink("Open", "Index", "OpenPosition", null, new { @class = "dropdown-item" })
                                    @Html.ActionLink("Positions", "Index", "Position", null, new { @class = "dropdown-item" })
                                    @Html.ActionLink("UserDetails", "Index", "UserDetail", null, new { @class = "dropdown-item" })
                                </div>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link js-scroll" href="@Url.Action("Contact","Home")" class="btn btn-primary border-width-2 d-none d-lg-inline-block"><span class="mr-2 icon-paper-plane">Contact</a>
                            </li>

                            @if (User.IsInRole("Admin"))
                            {
                                <li>@Html.ActionLink("Roles", "Index", "RolesAdmin")</li>
                                <li>@Html.ActionLink("Users", "Index", "UsersAdmin")</li>
                            }
                            <li>@Html.Partial("_LoginPartial")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
    </div>

    @RenderBody()

    <!-- SCRIPTS -->
    <script src="~/Content/js/jquery.min.js"></script>
    <script src="~/Content/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/js/isotope.pkgd.min.js"></script>
    <script src="~/Content/js/stickyfill.min.js"></script>
    <script src="~/Content/js/jquery.fancybox.min.js"></script>
    <script src="~/Content/js/jquery.easing.1.3.js"></script>
    <script src="~/Content/js/jquery.waypoints.min.js"></script>
    <script src="~/Content/js/jquery.animateNumber.min.js"></script>
    <script src="~/Content/js/owl.carousel.min.js"></script>
    <script src="~/Content/js/custom.js"></script>
    <script src="~/Content/js/Style.js"></script>

    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.js"></script>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
        $('.nav li a').each(function () {
            var fullAnchor = $(this).attr('href');
            var aController = fullAnchor.split('/');
            var fullPath = (window.location.pathname + location.search).substr(1);
            var pController = fullPath.split('');
            //added for QueryStriong Search
            if (fullPath.indexOf('?') != -1) {
                pController = fullPath.split('?');

            }
            if (aController[1] == pController[0]) {
                $(this).addClass('selected');

            }
            //if the controller is Home, but the path does NOT match the ENTIRE anchor -remove
            //the class(prevents 2 nav elements from showing selected simultaneously)
            if (aController[1] == 'Home' && window.location.pathname != fullAnchor) {
                $(this).removeClass();

            }
            //Same for Register and Login
            if (aController[1] == 'Account' && window.location.pathname != fullAnchor) {
                $(this).removeClass();
            }

        });
    </script>

</body>
</html>